<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AuthorsPRH" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/colorBackground</item>

        <item name="android:editTextStyle">@style/Theme.AuthorsPRH.EditText</item>
        <item name="editTextStyle">@style/Theme.AuthorsPRH.EditText</item>
        <item name="android:textViewStyle">@style/Theme.AuthorsPRH.TextView</item>
        <item name="cardViewStyle">@style/Theme.AuthorsPRH.CardView</item>
    </style>

    <style name="Theme.AuthorsPRH.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/background_rounded_white</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorHint</item>
    </style>

    <style name="Theme.AuthorsPRH.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="Theme.AuthorsPRH.TextView.Title" parent="Theme.AuthorsPRH.TextView">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.AuthorsPRH.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">2dp</item>
    </style>
</resources>